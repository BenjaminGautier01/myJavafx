<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="root" alignment="CENTER" prefHeight="408.0" prefWidth="915.0" spacing="10.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="RegentChatBot">

   <Label text="Welcome to Regent College London's Student Information System!" />
   <Label text="What would you like to know?" />

   <TextArea fx:id="chatBox" prefHeight="200.0" prefWidth="500.0" />

   <TextField fx:id="inputBox" onAction="#handleInput" prefWidth="500.0" />

   <Button onAction="#handleInput" text="Send" />

</VBox>
